@using DataLayer.DTO
@using DataLayer.ViewModels.BreadCrumb
@using DataLayer.SSOT


@{
    Layout = null;
}


<form class="form-horizontal" asp-action="Insert" method="post">
    <div class="">
        <div class="container">
            <div class="form-group">
                <label for="Title" class="control-label col-sm-12">Keyword Title <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" required="required" name="Keyword" aria-describedby="Title" placeholder="Keyword Title" />
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-12">Keyword Type <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <select name="Type" class="form-control" asp-items="@Html.GetEnumSelectList<KeywordTypeSSOT>()">
                        <option>-- select a type --</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="btn btn-block btn-success">Submit</button>
        </div>
    </div>
</form>





