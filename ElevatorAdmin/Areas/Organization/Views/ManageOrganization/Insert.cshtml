@{
    Layout = null;
}


<form id="frm" action="/Organization/ManageOrganization/Insert" class="form-horizontal" method="post" style="">

    <div class="form-group">
        <label for="OrganizationTitle" class="control-label col-sm-4">OrganizationName <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-12">
            <input type="text" class="form-control" required="required" name="OrganizationTitle" aria-describedby="OrganizationTitle" placeholder="Name" />
        </div>
    </div>


    <div class="form-group">
        <label for="OrganizationPhone" class="control-label col-sm-3">OrganizationPhone <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-12">
            <input type="text" class="form-control" required="required" name="OrganizationPhone" aria-describedby="OrganizationPhone" placeholder="OrganizationPhone" />
        </div>
    </div>


    <div class="form-group">
        <label for="OrganizationAddress" class="control-label col-sm-3">OrganizationAddress <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-12">
            <textarea type="text" class="form-control" required="required" name="OrganizationAddress" aria-describedby="OrganizationAddress" placeholder="OrganizationAddress"></textarea>
        </div>
    </div>



    <button type="submit" class="btn btn-block btn-success" id="sbtForm">Submit</button>

</form>
