@model List<DataLayer.DTO.FAQs.FaqGroupDTO>
@using DataLayer.ViewModels.BreadCrumb

@{
    ViewData["Title"] = "Faq Group List";
}

@{
    TempData["BreadCrumb"] = new List<Breadcrumb>
    {
        new Breadcrumb
        {
            Title = "FAQ"
        },
        new Breadcrumb
        {
            Title = "Manage FAQ Group",
            Href = "/FAQ/ManageFaqGroup"
        }
    };
}


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 btn-table">



    <TableBotton area="FaqGroup" controller="ManageFaqGroup" action="Insert"
                 isModal="true"
                 modalTitle="New Item"
                 title="Insert"
                 icon="fa-plus"
                 buttonClass="btn-primary"></TableBotton>

    <span class="hidden" data-role-table-btn-area-access="">



        <TableBotton area="FaqGroup" controller="ManageFaqGroup" action="Update"
                     isModal="true"
                     modalTitle="Update Item"
                     title="Update"
                     icon="fa-pencil-square-o"
                     buttonClass="btn-warning"></TableBotton>

        <TableBotton area="FaqGroup" controller="ManageFaqGroup" action="Delete"
                     isModal="true"
                     modalTitle="Delete Item"
                     title="Delete" wichModal="sm"
                     icon="fa-trash"
                     buttonClass="btn-danger"></TableBotton>


    </span>
</div>


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <table class="table-first table-condensed table table-responsive tableWrap table-striped rounded table-hover table-bordered ">
        <thead>
            <tr>
                <th width="3%"></th>
                <th width="8%">
                    #
                </th>
                <th>Icon</th>
                <th>Group Title</th>
            <tr>
                <form method="post">
                    <th>
                        ---
                    </th>
                    <th>
                        ---
                    </th>
                    <th>
                        ---
                    </th>
                    <th><input type="text" value="@ViewBag.SearchModel.Title" name="Title" class="form-control searchInput" /></th>
                    <input type="submit" class="form-control hidden btn btn-success btn-block searchBtn" value="جستجو" />
                </form>
            </tr>
        </thead>
    </table>
    <div class="bodycontainer scrollable ">
        <table class="table-second table table-hover table-striped table-condensed table-bordered table-scrollable">
            <tbody>

                @{var index = 1;}
                @if (Model != null)
                {

                    @foreach (DataLayer.DTO.FAQs.FaqGroupDTO item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                            <td>@(index++)</td>
                            <td>
                                <i class="@item.Icon" aria-hidden="true"></i>
                            </td>
                            <td>@item.Title</td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-danger">There is no record</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <table class="table table-hover table-striped">
        <tfoot>
            @Html.Partial("~/Views/Shared/_Pagination.cshtml")
        </tfoot>
    </table>
</div>


