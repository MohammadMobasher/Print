@using DataLayer.DTO.Organizations
@using DataLayer.Entities

@model List<OrganizationIdTitleDTO>


@{
    Layout = null;
    Project project = ViewBag.Entity;
}


<form id="frm" action="/Customer/ManageProjectC/Update" class="form-horizontal" method="post" style="">
    <div class="row">

        <input type="hidden" name="Id" value="@project.Id" />
        <div class="col-lg-6 col-md-6 col-sm-12 col-xl-6">
            <div class="form-group">
                <label for="Title" class="control-label col-sm-12">Project Title <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" required="required" name="Title" aria-describedby="ProjectTitle" placeholder="Project Title" />
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xl-6">
            <div class="form-group">
                <label for="Text" class="control-label col-sm-12">Organization <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <select name="OrganizationId" required="required" class="form-control form-control-lg">
                        <option value="">Please Choose...</option>
                        @foreach (OrganizationIdTitleDTO item in Model)
                        {
                            <option value="@item.Id">@item.OrganizationTitle</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12">
            <div class="form-group">
                <label for="Title" class="control-label col-sm-12">Address <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" required="required" name="Address" aria-describedby="Address" placeholder="Address" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-block btn-success" id="sbtForm">Submit</button>
    </div>
</form>
