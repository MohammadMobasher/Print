@using DataLayer.Entities.FAQs
@using DataLayer.DTO.FAQs

@model FAQ
@{
    Layout = null;
    List<FaqGroupDTO> FaqGroups = ViewBag.FaqGroups;
}


<form id="frm" action="/FAQ/ManageFAQ/Update" class="form-horizontal" method="post">

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="QuestionText" class="control-label col-sm-4">Question <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-12">
            <textarea type="text" class="form-control" required="required" name="QuestionText" aria-describedby="QuestionText" placeholder="عنوان سوال">@Model.QuestionText</textarea>
        </div>
    </div>


    <div class="form-group">
        <label for="AnswerText" class="control-label col-sm-3">Answer <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-12">
            <textarea type="text" class="form-control" required="required" name="AnswerText" aria-describedby="AnswerText" placeholder="Answer">@Model.AnswerText</textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="Text" class="control-label col-sm-3">Group <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-12">
            <select name="FaqGroupId" required="required" class="form-control form-control-lg">
                <option value="">Please Choose...</option>
                @foreach (FaqGroupDTO item in FaqGroups)
                {
                    if (item.Id == Model.FaqGroupId)
                    {
                        <option selected value="@item.Id">@item.Title</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                }
            </select>
        </div>
    </div>


    <div class="form-group">
        <label for="IsActive" class="control-label col-sm-3">Status</label>
        <div class="col-sm-12">

            <input type="checkbox" name="IsActive" @(Model.IsActive ? "checked='checked'" : "")>

        </div>
    </div>




    <button type="submit" class="btn btn-block btn-success" id="sbtForm">Submit</button>

</form>
