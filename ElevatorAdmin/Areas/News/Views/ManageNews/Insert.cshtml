@using DataLayer.DTO
@using DataLayer.ViewModels.BreadCrumb

@model List<NewsGroupDTO>


@{
    ViewData["Title"] = "News Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    TempData["BreadCrumb"] = new List<Breadcrumb>
{
new Breadcrumb
{
    Title = "News"
},
new Breadcrumb
{
    Title = "Manage News",
    Href = "/News/ManageNews/Index"
},
new Breadcrumb
{
    Title = "Insert",
}
};
}





<script src="~/lib/ckeditor/ckeditor.js"></script>

<form class="form-horizontal" asp-area="News" asp-controller="ManageNews" asp-action="Insert" method="post" style="" enctype="multipart/form-data">


    <div class="">
        <div class="container">
            <div class="form-group">
                <label for="Title" class="control-label col-sm-12">News Title <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <textarea class="form-control" required="required" name="Title" aria-describedby="Title" placeholder="News Title"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-12">News Text <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <textarea name="Description" id="Description" class="form-control" placeholder="News Text" aria-describedby="Description" required="required"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="SummeryNews" class="control-label col-sm-12">News Summery <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <textarea class="form-control" required="required" name="SummeryNews" aria-describedby="Title" placeholder="News Summery"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-12">News Group <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <select name="NewsGroupId" required="required" class="form-control form-control-lg">
                        <option>Please choose ...</option>
                        @foreach (var item in Model)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-12">News Image <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <input name="ImageFile"
                           required
                           type="file" class="dropify"
                           data-show-loader="true"
                           accept="image/gif, image/jpeg, image/png , image/bmp , image/jpg"
                           id="ImageAddress" size="50">

                </div>
            </div>

            <div class="form-group">
                <label for="Tags" class="control-label col-sm-12">News Tags <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" name="Tags" data-role="tagsinput" placeholder="News Tags" required="required" />

                </div>
            </div>



            <button type="submit" class="btn btn-block btn-success">Submit</button>


            <script type="text/javascript">
                $(document).ready(function () {
                    CKEDITOR.replace('Description');

                });
            </script>
        </div>
    </div>


</form>





