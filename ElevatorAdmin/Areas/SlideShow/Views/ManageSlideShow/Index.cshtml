@model List<DataLayer.DTO.SlideShowDTO>
@using DataLayer.ViewModels.BreadCrumb

@{
    ViewData["Title"] = "لیست اسلایدشوها ";
}

@{
    TempData["BreadCrumb"] = new List<Breadcrumb>
    {
        new Breadcrumb
        {
            Title = "Group News"
        },
        new Breadcrumb
        {
            Title = "Manage SlideShow",
            Href = "/News/ManageSlideShow/Index"
        }
    };
}


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 btn-table">



    <TableBotton area="SlideShow" controller="ManageSlideShow" action="Insert"
                 isModal="true"
                 modalTitle="New Item"
                 title="Insert"
                 icon="fa-plus"
                 buttonClass="btn-primary"></TableBotton>

    <span class="hidden" data-role-table-btn-area-access="">

        <TableBotton area="SlideShow" controller="ManageSlideShow" action="Update"
                     isModal="true"
                     modalTitle="Update Item"
                     title="Update"
                     icon="fa-pencil-square-o"
                     buttonClass="btn-warning"></TableBotton>

        <TableBotton area="SlideShow" controller="ManageSlideShow" action="Delete"
                     isModal="true"
                     modalTitle="Delete Item"
                     title="Delete" wichModal="sm"
                     icon="fa-trash"
                     buttonClass="btn-danger"></TableBotton>


    </span>



</div>


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <table class="table-first table-condensed table table-responsive tableWrap table-striped rounded table-hover table-bordered ">
        <thead>
            <tr>
                <th width="3%"></th>
                <th width="8%">
                    #
                </th>
                <th>Title</th>
                @*<th>Name</th>*@
                @*<th width="10%">اقدامات</th>*@
            </tr>
            <tr>
                <form method="post">
                    <th>
                        ---
                        @*<input  type="checkbox" data-toggle="tooltip" title="انتخاب همه" data-role="confirm">*@

                    </th>
                    <th>

                        ---


                        @*<input type="text" value="@ViewBag.SearchModel.Id" name="Id" class="form-control searchInput" />*@
                    </th>
                    <th>
                        <input type="text" value="@ViewBag.SearchModel.Title" name="Title" class="form-control searchInput" />
                    </th>
                    @*<th><input type="text" value="" name="Name" class="form-control searchInput" /></th>*@

                    <input type="submit" class="form-control hidden btn btn-success btn-block searchBtn" value="جستجو" />
                </form>
            </tr>
        </thead>
    </table>
    <div class="bodycontainer scrollable ">
        <table class="table-second table table-hover table-striped table-condensed table-bordered table-scrollable">
            <tbody>



                @{var index = 1;}
                @if (Model != null)
                {

                    @foreach (DataLayer.DTO.SlideShowDTO item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                            <td>@(index++)</td>
                            <td>@item.Title</td>
                            
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
    <table class="table table-hover table-striped">
        <tfoot>
            @Html.Partial("~/Views/Shared/_Pagination.cshtml")
        </tfoot>
    </table>


</div>



