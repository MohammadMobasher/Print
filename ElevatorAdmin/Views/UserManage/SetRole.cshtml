@using DataLayer.Entities.Users;
@model UserRoles
@{
    var roles = ViewBag.Roles as List<Roles>;
}
@{
    ViewBag.Title = "ثبت نقش جدید";
    Layout = null;
}
<style>
    ul {
        list-style-type: none;
    }
</style>
<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <form asp-action="SetRole" method="post">

        <div class="card-box">
            <div class="form-group clearfix">
                <label class="control-label col-md-12">Role</label>
                <div class="col-md-12">
                    <select class="form-control" asp-for="RoleId" data-role="select2">
                        <option>Please Choose ...</option>
                        @foreach (var item in roles)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>

        </div>


        <input type="hidden" name="UserId" value="@ViewBag.UserId" />
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-block btn-primary ">Submit</button>
            </div>
        </div>
    </form>
</div> <!-- container -->
