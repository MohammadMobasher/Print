@using DataLayer.DTO.FAQs
@model List<FAQDTO>

@{
    ViewData["Title"] = "جستجو سوالات پرتکرار";
}



<div class="breadcrumb-area bg-grey">
    <div class="container">
        <div class="ho-breadcrumb">
            <ul>
                <li><a href="/">خانه</a></li>
                <li><a href="/FAQ/Index"> سوالات پرتکرار</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</div>


<div class="container">

    <div class="accordion mt-30 mb-30 " id="accordionExample">

        @foreach (FAQDTO item in Model)
        {
            <div class="card">
                <div class="card-header" id="heading@{@item.Id} ">
                    <h2 class="mb-0">
                        <button class="btn" type="button" data-toggle="collapse" data-target="#collapse@{@item.Id}" aria-expanded="true" aria-controls="collapse@{@item.Id}">
                            @item.QuestionText
                        </button>
                    </h2>
                </div>

                <div id="collapse@{@item.Id}" class="collapse" aria-labelledby="heading" data-parent="#accordionExample">
                    <div class="card-body" style="padding-right:50px; font-size:13px">
                        @item.AnswerText
                    </div>
                </div>
            </div>
        }


    </div>

</div>
