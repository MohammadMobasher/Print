                <article class="blogitem2">
                    <div class="blogitem2-image">
                        <img src="~/Plugins/Template/images/blog/blog-item-image-1-lg.jpg" title="@Model.Title" alt="@Model.Title">
                    </div>
                    <div class="blogitem2-content">
                        <h2>@Model.Title</h2>
                        <div class="blogitem2-meta">
                            <span>
                                <i class="ion ion-md-calendar"></i>
                                @Model.Date.ToPersianDateTextify()
                            </span>
                        </div>
                        <p>
                            @Html.Raw(Model.SummeryNews)
                        </p>
                    </div>

                    <div style="font-size:13px;line-height:35px">
                        @Html.Raw(Model.Description)
                    </div>
                </article>
                <div class="blog-details-footer">
                    <div class="blog-details-tags">
                        <h5>تگ ها: </h5>
                        <ul>
                            @foreach (string tag in Model.Tags.Split(","))
